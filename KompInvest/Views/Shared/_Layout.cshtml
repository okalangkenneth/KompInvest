<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - KOMPINVEST</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src="~/images/LogoMakr-45B09I.png" alt="Logo" class="logo"> <strong>KOMPISAR INVESTMENT CLUB</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active"><a class="nav-link" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Blog/News</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Events</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Resources</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact Us</a></li>
                <li class="nav-item"><a class="nav-link" href="#" data-toggle="modal" data-target="#loginModal">Member Login</a></li>
            </ul>
            <ul class="navbar-nav ml-auto social-icons">
                <li class="nav-item"><a href="#" class="nav-link facebook-icon"><i class="fab fa-facebook-f"></i></a></li>
                <li class="nav-item"><a href="#" class="nav-link instagram-icon"><i class="fab fa-instagram"></i></a></li>
                <li class="nav-item"><a href="#" class="nav-link linkedin-icon"><i class="fab fa-linkedin-in"></i></a></li>
            </ul>
        </div>
    </nav>


    <!-- Banner Section -->
    <header class="text-center py-5 header-content" style="background-image: url('/images/background_1.jpg'); background-size: cover; height: 400px;">
        <h1 class="text-white">Investing Together, Growing Together</h1>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Chatbot UI -->
    <div class="chatbot-ui" id="chatbotUI" onclick="toggleChatbot()">
        <img src="/images/LogoMakr-1ObF0a.png" alt="Chat with us" class="chatbot-icon">
        <div class="chatbot-body p-3">
            <!-- Chat content goes here -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        // Gradual fade-in effect for the background image
        $(document).ready(function () {
            $('body').hide().fadeIn(4000); // 4000 milliseconds (4 seconds)
        });

        function toggleChatbot() {
            $('#chatbotUI').toggle();
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2023 Kompisar Investment Club. All rights reserved.</p>
    </footer>
</body>
</html>


