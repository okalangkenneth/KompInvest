@{
    ViewData["Title"] = "Resources";
}

<main role="main" class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="resource-list">

        <div class="resource-category">
            <img src="~/images/education-icon.png" alt="Education" class="resource-icon" />
            <h2>Educational Materials</h2>
            <ul>
                <li><a href="https://www.investopedia.com/terms/b/beginner.asp" target="_blank">Investing 101: A Beginner's Guide</a></li>
                <li><a href="https://www.morningstar.com/articles/archive/1577/articles" target="_blank">Advanced Trading Strategies</a></li>
            </ul>
        </div>

        <div class="resource-category">
            <img src="~/images/market-analysis-icon.png" alt="Market Analysis" class="resource-icon" />
            <h2>Market Analysis Reports</h2>
            <ul>
                <li><a href="https://www.bloomberg.com/africa" target="_blank">Monthly Economic Outlook</a></li>
                <li><a href="https://www.reuters.com/markets/africa/" target="_blank">Sector-Specific Analysis: Technology</a></li>
            </ul>
        </div>

        <div class="resource-category">
            <a href="https://www.bankrate.com/investing/calculators/" target="_blank">
                <i class="bi bi-calculator">Investment Calculator</i>
            </a>
            <h2>Investment Tools</h2>
            <!-- Example investment calculator tool -->
           
        </div>

        <div class="resource-category">
            <img src="~/images/webinar-icon.png" alt="Webinar" class="resource-icon" />
            <h2>Webinars and Workshops</h2>
            <!-- List upcoming events -->
        </div>

        <div class="resource-category">
            <img src="~/images/videos-icon.png" alt="Videos" class="resource-icon" />
            <h2>Video Tutorials</h2>
            <a href="https://www.youtube.com/playlist?list=PLlVlyGVtvuVk0LzXZfvydfIC4AZwVxO8D" target="_blank">
                <img src="~/images/video-tutorial-thumbnail.jpg" alt="Video Tutorials" class="resource-thumbnail" />
            </a>
        </div>

        <!-- Additional sections for podcasts, regulatory information, community forum, etc. -->

    </div>
</main>


