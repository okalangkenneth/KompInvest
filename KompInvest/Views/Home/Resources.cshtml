@{
    ViewData["Title"] = "Resources";
}

<main role="main" class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="resource-list">
        <!-- Educational Materials -->
        <div class="resource-category">
            <img src="~/images/education-icon.png" alt="Education" class="resource-icon" />
            <h2>Educational Materials</h2>
            <ul>
                <li><a href="https://www.example.com/beginners-guide" target="_blank">Investing 101: A Beginner's Guide</a></li>
                <li><a href="https://www.example.com/advanced-strategies" target="_blank">Advanced Trading Strategies</a></li>
            </ul>
        </div>

        <!-- Market Analysis Reports -->
        <div class="resource-category">
            <img src="~/images/market-analysis-icon.png" alt="Market Analysis" class="resource-icon" />
            <h2>Market Analysis Reports</h2>
            <ul>
                <li><a href="https://www.example.com/economic-outlook" target="_blank">Monthly Economic Outlook</a></li>
                <li><a href="https://www.example.com/sector-analysis" target="_blank">Sector-Specific Analysis: Technology</a></li>
            </ul>
        </div>

        <!-- Investment Tools -->
        <div class="resource-category">
            <h2>Investment Tools</h2>
            <a href="https://www.example.com/investment-calculator" target="_blank">
                <img src="~/images/calculator-icon.png" alt="Investment Calculator" class="resource-icon" />
                <p>Investment Calculator</p>
            </a>
        </div>

        <!-- Webinars and Workshops -->
        <div class="resource-category">
            <img src="~/images/webinar-icon.png" alt="Webinar" class="resource-icon" />
            <h2>Webinars and Workshops</h2>
            <p>Upcoming and recorded sessions to enhance your investing skills.</p>
        </div>

        <!-- Video Tutorials -->
        <div class="resource-category">
            <img src="~/images/videos-icon.png" alt="Videos" class="resource-icon" />
            <h2>Video Tutorials</h2>
            <a href="https://www.example.com/video-tutorials" target="_blank">
                <img src="~/images/video-tutorial-thumbnail.jpg" alt="Video Tutorials" class="resource-thumbnail" />
            </a>
        </div>

        <!-- Podcasts -->
        <div class="resource-category">
            <img src="~/images/podcast-icon.png" alt="Podcasts" class="resource-icon" />
            <h2>Investment Podcasts</h2>
            <ul>
                <li><a href="https://www.example.com/market-insights-podcast" target="_blank">Market Insights</a></li>
                <li><a href="https://www.example.com/investing-strategies-podcast" target="_blank">Investing Strategies</a></li>
            </ul>
        </div>

        <!-- Regulatory Information -->
        <div class="resource-category">
            <img src="~/images/regulatory-icon.png" alt="Regulatory" class="resource-icon" />
            <h2>Regulatory Information</h2>
            <ul>
                <li><a href="https://www.example.com/regulations-usa" target="_blank">United States Regulations</a></li>
                <li><a href="https://www.example.com/regulations-uganda" target="_blank">Uganda Regulations</a></li>
                <li><a href="https://www.example.com/regulations-uk" target="_blank">United Kingdom Regulations</a></li>
                <li><a href="https://www.example.com/regulations-sweden" target="_blank">Sweden Regulations</a></li>
            </ul>
        </div>

        <!-- Additional sections for community forums, etc. -->
    </div>
</main>





