@{
    ViewData["Title"] = "Events";
}

<main role="main" class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="list-group">
        <!-- Monthly Meeting -->
        <div class="list-group-item">
            <h3 class="list-group-item-heading">Monthly Meeting</h3>
            <p class="list-group-item-text">Join us for our monthly meeting where we discuss club matters and investment opportunities. It's a great way to stay informed and involved.</p>
            <span class="badge badge-info">3rd December 2023</span>
        </div>

        <!-- Get Together Party -->
        <div class="list-group-item">
            <h3 class="list-group-item-heading">Get Together Party</h3>
            <p class="list-group-item-text">Let's celebrate our wins and network with fellow investors. Bring a friend and enjoy an evening of fun and conversation.</p>
            <span class="badge badge-info">10th December 2023</span>
        </div>

        <!-- Welcome Party for New Members -->
        <div class="list-group-item">
            <h3 class="list-group-item-heading">Welcome Party for New Members</h3>
            <p class="list-group-item-text">We're throwing a party to welcome all the new members to our club. Come and meet the newest additions to our investment community.</p>
            <span class="badge badge-info">17th December 2023</span>
        </div>

        <!-- Investment Workshop -->
        <div class="list-group-item">
            <h3 class="list-group-item-heading">Investment Workshop</h3>
            <p class="list-group-item-text">A hands-on workshop where you can learn about different investment strategies, portfolio management, and market analysis.</p>
            <span class="badge badge-info">24th December 2023</span>
        </div>

        <!-- Annual General Meeting -->
        <div class="list-group-item">
            <h3 class="list-group-item-heading">Annual General Meeting</h3>
            <p class="list-group-item-text">Our AGM where we reflect on the past year's performance, plan for the upcoming year, and elect the executive committee.</p>
            <span class="badge badge-info">31st December 2023</span>
        </div>
    </div>
</main>

